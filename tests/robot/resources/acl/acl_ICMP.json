{
    "name": "${acl_name}",
    "interfaces": {
        "egress": [
            "${egr_intf1}"
        ],
        "ingress": [
            "${ingr_intf1}"
        ]
    },
    "rules": [
        {
           "action": ${acl_action},
            "ip_rule": {
                "ip": {
                    "destination_network": "${dest_ntw}",
                    "source_network": "${src_ntw}"
                },
                "icmp": {
                    "icmpv6": ${icmpv6},
                    "icmp_code_range": {
                        "first": ${code_range_low},
                        "last": ${code_range_up}
                    },
                    "icmp_type_range": {
                        "first": ${type_range_low},
                        "last": ${type_range_up}
                    }
                }
            }
        }
    ]
}